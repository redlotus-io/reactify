{
  "name": "react-boilerplate",
  "private": true,
  "version": "0.0.1",
  "module": "src/main.tsx",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "cd .. && husky install client/.husky",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx ./src --ignore-path .gitignore",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "clean": "rm -rf node_modules/ && rm -rf yarn.lock && yarn && yarn start",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@headlessui/react": "^1.7.3",
    "@react-hook/window-size": "^3.1.1",
    "@redlotus/lotusui": "^0.0.12",
    "clsx": "^1.2.1",
    "daisyui": "^2.31.0",
    "date-fns": "^2.29.3",
    "formik": "^2.2.9",
    "framer-motion": "^7.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-router-dom": "^6.4.2",
    "tailwindcss-border-gradient-radius": "^3.0.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/confusing-browser-globals": "^1.0.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitejs/plugin-react": "^2.1.0",
    "autoprefixer": "^10.4.12",
    "c8": "^7.12.0",
    "confusing-browser-globals": "^1.0.11",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-redlotus-base": "latest",
    "eslint-config-redlotus-react": "latest",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.6.2",
    "eslint-plugin-testing-library": "^5.7.2",
    "husky": "^8.0.1",
    "jsdom": "^20.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "tailwind-scrollbar": "^2.0.1",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.4",
    "vite": "^3.1.6",
    "vite-plugin-checker": "^0.5.1",
    "vite-plugin-pwa": "^0.13.1",
    "vite-tsconfig-paths": "^3.5.1",
    "vitest": "^0.24.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,graphql,a}": "yarn prettier",
    "*.{js,jsx,ts,tsx,md,graphql}": "yarn lint:fix"
  }
}
